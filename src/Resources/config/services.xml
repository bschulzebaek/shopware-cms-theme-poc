<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="CmsPoc\Core\Content\ThemeTemplate\ThemeTemplateDefinition">
            <tag name="shopware.entity.definition" entity="theme_template" />
        </service>

        <service id="CmsPoc\Storefront\DatabaseTwigLoader">
            <argument type="service" id="theme_template.repository" />
            <tag name="twig.loader" />
        </service>
    </services>
</container>
