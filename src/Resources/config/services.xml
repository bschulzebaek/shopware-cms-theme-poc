<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="CmsPoc\Core\Content\ThemeTemplate\ThemeTemplateDefinition">
            <tag name="shopware.entity.definition" entity="theme_template" />
        </service>

        <service id="CmsPoc\Storefront\DatabaseTwigLoader">
            <tag name="twig.loader" />
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="shopware.filesystem.private" />
            <argument type="service" id="cache.object"/>
        </service>

        <service id="CmsPoc\Core\TemplateIndexerSubscriber">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="theme_template.repository" />
            <argument type="service" id="shopware.filesystem.private" />
        </service>
    </services>
</container>
